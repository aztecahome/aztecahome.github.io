---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro-imagetools/components";
import ButtonLink from "../components/ui/ButtonLink.astro";
import Banner from "../components/ui/Banner.astro";
---

<Layout title="Pools">
  <main>
    <section
      class="relative flex h-[75vh] flex-col items-center justify-end sm:justify-center bg-army-900"
    >
      <div class="hero contents">
        <Picture src="/pool/18.webp" alt="Beautiful clean sparkling pool" objectFit="cover" objectPosition="top left" />
      </div>
      <div class="container mx-auto absolute z-10 flex flex-col items-end gap-4 p-4">
        <h2
          class="max-w-[600px] rounded bg-army-50/60 p-4 text-3xl text-army-900 drop-shadow-2xl backdrop-blur-sm"
        >
          Dive into a <b>Clean</b>, <b>Crystal Clear</b> Pool with Our <b
            >Expert Care</b
          >
        </h2>
        <ButtonLink content="Book Pool Service" url="/contact" addBorder />
      </div>
    </section>

    <Banner cta="Transform your backyard into an oasis" />
    
  </main>
</Layout>