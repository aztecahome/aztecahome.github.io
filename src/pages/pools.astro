<Layout title="Pools">
  <main>
    <section
      class="relative flex h-[75vh] flex-col items-center justify-end bg-army-900 sm:justify-center"
    >
      <div class="hero contents">
        <img
          src={myPlaceholder.dataURI}
          alt="Beautiful clean sparkling pool"
          class="object-cover object-[top_left]"
          loading="eager"
        />
        <Image
          src={PoolImg}
          alt="Beautiful clean sparkling pool"
          class="object-cover object-[top_left]"
          loading="eager"
        />
      </div>
      <div
        class="container absolute z-10 mx-auto flex flex-col items-end gap-4 p-4"
      >
        <h2
          class="max-w-[600px] rounded bg-army-50/60 p-4 text-3xl text-army-900 drop-shadow-2xl backdrop-blur-sm"
        >
          Dive into a <b>Clean</b>, <b>Crystal Clear</b> Pool with Our <b
            >Expert Care</b
          >
        </h2>
        <ButtonLink content="Book Pool Service" url="/contact" addBorder />
      </div>
    </section>

    <Banner cta="Transform your backyard into an oasis" />

    <section class="container mx-auto mb-16 p-4">
      <h4 class="col-span-12 py-8 text-3xl font-black uppercase">
        Our Pool Services
      </h4>
      <ul
        class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        {
          services.map(({ name, url, imageUrl, d = DEFAULT_WAVE }) => (
            <li class="contents">
              <a
                href={url}
                style={`background-image: url('${imageUrl}');`}
                class="group my-0 mx-auto aspect-square w-full max-w-[300px] overflow-hidden rounded-lg bg-army-200 bg-cover shadow hover:underline"
              >
                <h5 class="bg-army-50/90 p-4 text-2xl transition-all group-hover:bg-army-200/90 group-hover:pb-16">
                  {name}
                </h5>
                <svg
                  class="fill-army-50/90 transition-all group-hover:fill-army-200/90"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 1440 320"
                >
                  <path d={d} />
                </svg>
              </a>
            </li>
          ))
        }
      </ul>
    </section>

    <Banner cta="Set up weekly pool service now!" />

    <svg
      class="fill-army-900"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1440 320"
      ><path
        d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path></svg
    >
    <section class="bg-army-900 text-army-50">
      <div
        class="container mx-auto flex flex-col items-center justify-center py-8 md:flex-row"
      >
        <div class="flex flex-col gap-8 p-4">
          <h4 class="text-3xl font-black uppercase">Clean, easy, simple.</h4>
          <p class="text-xl">
            Choose AZTECA to do your weekly pool service, repairs, and more.
          </p>
