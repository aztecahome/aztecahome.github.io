---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro-imagetools/components";
---

<Layout title="Pest Control">
  <main>
    <section
      class="justify-top relative flex h-[75vh] flex-col bg-army-900 sm:justify-center"
    >
      <div class="hero contents">
        <Picture
          src="/general/truck.webp"
          alt="AZTECA Pest Control truck in front of house"
          objectFit="cover" objectPosition="center" 
        />
      </div>
      <div class="absolute z-10 flex flex-col gap-4 p-4 lg:p-8">
        <h2
          class="max-w-[600px] rounded bg-army-50/60 p-4 text-3xl text-army-900 drop-shadow-2xl backdrop-blur-sm"
        >
          Keep Your Property <b>Pest-Free</b> with Our <b
            >Comprehensive Control Solutions</b
          >
        </h2>
        <a
          class="w-fit rounded border-b-8 border-army-300 bg-army-900 p-4 pb-3 text-lg font-bold text-army-50 drop-shadow-2xl transition-colors hover:bg-army-300"
          href="/contact"
          >Schedule an Appointment
        </a>
      </div>
    </section>

    <aside
      class="grid grid-cols-1 items-center gap-4 bg-army-400 p-4 md:grid-cols-3 lg:p-8"
    >
      <h4 class="py-[14px] text-2xl font-light text-army-50 md:col-span-2">
        Bid farewell to creepy crawlers
      </h4>
      <a
        href="/contact"
        class="col-span-1 rounded bg-army-900 px-2 py-4 text-center text-lg font-bold uppercase text-army-50 transition-[background] hover:bg-army-300"
        >Contact Us</a
      >
    </aside>
  </main>
</Layout>
